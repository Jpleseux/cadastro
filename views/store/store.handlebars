<h1 style="text-align: center;">Estoque de produtos</h1>


<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Nome Produto</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Tipo</th>
        </tr>
    </thead>
    <tbody>
        {{#each produto}}

            <tr>
                <td>{{nome}}</td>
                <td>{{quantidade}}</td>
                <td>{{tipo}}</td>
            </tr>

        {{else}}

            <h1>Sem produtos para mostrar</h1>

        {{/each}}
    </tbody>
</table>


<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col">
                <a href="/"><button class="btn btn-success">Voltar para tela HOME</button></a>
        </div>
        <div class="col">
            <form action="/genaration" method="post">
            
                <button type="submit"  style="float: right;" class="btn btn-secondary">Baixar planilha no computador</button>

            </form>
        </div>
    </div>
</div>

